<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308"
  maxWidth="1.7976931348623157E308"
  stylesheets="@../css/Main.css" xmlns="http://javafx.com/javafx/8.0.162"
  fx:controller="net.yuvideo.jgemstone.client.Controllers.BoxPaketEditController">
  <children>
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
      AnchorPane.topAnchor="0.0"
      fillWidth="false"
      layoutX="83.0" layoutY="-18.0" spacing="5.0">
      <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </padding>
      <children>
        <Label text="Naziv paketa:"/>
        <TextField fx:id="tNazivPaketa"/>
        <Label text="Digitalna Televizija"/>
        <ComboBox prefWidth="150.0" fx:id="cmbDTV"/>
        <Label text="Internet"/>
        <ComboBox prefWidth="150.0" fx:id="cmbInternet"/>
        <Label text="IPTV"/>
        <ComboBox prefWidth="150.0" fx:id="cmbIPTV"/>
        <Label text="Fiksna Telefonija"/>
        <ComboBox prefWidth="150.0" stylesheets="@../css/Main.css" fx:id="cmbFiks"/>
        <Label text="Cena"/>
        <Spinner editable="true" fx:id="spnCena"/>
        <Label text="PDV"/>
        <Spinner editable="true" fx:id="spnPDV"/>
        <HBox alignment="CENTER_LEFT" spacing="5.0">
          <children>
            <Label text="Cena Paketa:"/>
            <Label text="0.00" fx:id="lCenaPaketa"/>
            <Label text="din."/>
          </children>
          <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
          </padding>
        </HBox>
        <Button mnemonicParsing="false" onAction="#saveBox" text="Snimi" fx:id="bSnimi">
          <graphic>
            <FontIcon iconLiteral="mdi-content-save" fill="white" />
          </graphic>
        </Button>
      </children>
    </VBox>
  </children>
</AnchorPane>
