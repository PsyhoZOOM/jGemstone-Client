<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="250.0" prefWidth="320.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.65"
      fx:controller="JGemstone.interfaces.NovServicesController">
    <children>
        <HBox alignment="CENTER" prefWidth="200.0" spacing="10.0" VBox.vgrow="NEVER">
            <children>
                <Button fx:id="bClose" mnemonicParsing="false" onAction="#closeServices" text="Zatvori"/>
                <Pane prefHeight="26.0" prefWidth="143.0" HBox.hgrow="ALWAYS"/>
                <Button fx:id="bSnimi" mnemonicParsing="false" onAction="#snimiServices" text="Snimi"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Izmena Servisa">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <GridPane alignment="CENTER" hgap="10.0" layoutX="91.0" layoutY="63.0"
                                          prefHeight="167.0" prefWidth="600.0" vgap="10.0" AnchorPane.bottomAnchor="0.0"
                                          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                          AnchorPane.topAnchor="0.0">
                                    <columnConstraints>
                                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="80.0"
                                                           minWidth="80.0" prefWidth="80.0"/>
                                        <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" minWidth="10.0"
                                                           prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
                                    </rowConstraints>
                                    <children>
                                        <Label text="Naziv:"/>
                                        <Label text="Cena:" GridPane.rowIndex="1"/>
                                        <Label text="Opis:" GridPane.rowIndex="2"/>
                                        <TextField fx:id="tNaziv" GridPane.columnIndex="1"/>
                                        <TextField fx:id="tCena" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        <TextField fx:id="tOpis" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                    </children>
                                </GridPane>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Untitled Tab 2">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                    </content>
                </Tab>
            </tabs>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </TabPane>
    </children>
</VBox>
