<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65"
            fx:controller="JGemstone.interfaces.EditKorisnikController">
    <children>
        <TabPane id="tabpane" fx:id="tabKorisnikEdit" layoutX="112.0" layoutY="107.0" AnchorPane.bottomAnchor="0.0"
                 AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <tabs>
                <Tab fx:id="tabKorisnickiPodaci" text="Korisnički podaci">
                    <content>
                        <AnchorPane fx:id="anchroKorsinikPodaci"/>
                    </content>
                </Tab>
                <Tab fx:id="tabKorisnikUsluge" onSelectionChanged="#refreshUgovori" text="Servisi">
                    <content>
                        <AnchorPane fx:id="anchorKorisnikUsluge">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="tabOprema" text="Oprema">
                    <content>
                        <AnchorPane>
                            <children>
                                <HBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <children>
                                        <VBox alignment="TOP_RIGHT" fillWidth="false" spacing="20.0">
                                            <padding>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="20.0"/>
                                            </padding>
                                            <children>
                                                <ComboBox fx:id="cmbNazivOpreme" maxWidth="1.7976931348623157E308"
                                                          promptText="Naziv" VBox.vgrow="ALWAYS"/>
                                                <ComboBox fx:id="cmbModelOpreme" maxWidth="1.7976931348623157E308"
                                                          promptText="Model"/>
                                                <JFXTextField fx:id="tSerijskiOpreme" labelFloat="true"
                                                              promptText="Serijski"/>
                                                <JFXTextField fx:id="tMACOpreme" labelFloat="true" promptText="MAC"/>
                                                <VBox spacing="20.0">
                                                    <children>
                                                        <Label text="Oprema:"/>
                                                        <JFXRadioButton fx:id="radNaplata" text="Naplata"/>
                                                        <JFXRadioButton fx:id="radRentiranje" text="Rentiranje"/>
                                                        <JFXRadioButton fx:id="radKorisnikOprema" text="Korisnik"/>
                                                    </children>
                                                </VBox>
                                                <JFXButton fx:id="bAddOprema" nodeOrientation="RIGHT_TO_LEFT"
                                                           text="Dodaj"/>
                                            </children>
                                        </VBox>
                                        <VBox alignment="TOP_RIGHT" spacing="20.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <TableView fx:id="tblUserOprema" prefHeight="200.0" prefWidth="200.0"
                                                           VBox.vgrow="ALWAYS">
                                                    <columns>
                                                        <TableColumn fx:id="colUserOpremaNaziv" prefWidth="75.0"
                                                                     text="Naziv"/>
                                                        <TableColumn fx:id="colUserOpremaModel" prefWidth="75.0"
                                                                     text="Model"/>
                                                        <TableColumn fx:id="colUserOpremaSerial" prefWidth="75.0"
                                                                     text="S/N"/>
                                                        <TableColumn fx:id="colUserOpremaMac" prefWidth="75.0"
                                                                     text="MAC"/>
                                                        <TableColumn fx:id="colUserOpremaNaplata" prefWidth="75.0"
                                                                     text="Naplata"/>
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                                    </columnResizePolicy>
                                                </TableView>
                                                <JFXButton fx:id="bDeleteOprema" text="Izbrisi"/>
                                                <TableView prefHeight="200.0" prefWidth="200.0">
                                                    <columns>
                                                        <TableColumn prefWidth="75.0" text="C1"/>
                                                        <TableColumn prefWidth="75.0" text="C2"/>
                                                    </columns>
                                                </TableView>
                                            </children>
                                            <padding>
                                                <Insets top="5.0"/>
                                            </padding>
                                        </VBox>
                                    </children>
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </padding>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="tabKorisnikUgovori" text="Ugovori">
                    <content>
                        <AnchorPane fx:id="anchorKorisnikUgovori"/>
                    </content>
                </Tab>
                <Tab text="Firma">
                    <content>
                        <AnchorPane>
                            <children>
                                <GridPane hgap="5.0" vgap="5.0" AnchorPane.bottomAnchor="0.0"
                                          AnchorPane.leftAnchor="0.0"
                                          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints valignment="TOP" vgrow="NEVER"/>
                                    </rowConstraints>
                                    <children>
                                        <TitledPane maxWidth="1.7976931348623157E308">
                                            <content>
                                                <GridPane hgap="5.0" vgap="5.0">
                                                    <columnConstraints>
                                                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER"
                                                                           minWidth="10.0"/>
                                                        <ColumnConstraints fillWidth="false" halignment="LEFT"
                                                                           hgrow="ALWAYS" minWidth="10.0"
                                                                           prefWidth="100.0"/>
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                                                        vgrow="NEVER"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                                                        vgrow="NEVER"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                                                        vgrow="NEVER"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                                                        vgrow="NEVER"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                                                        vgrow="NEVER"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                                                        vgrow="NEVER"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                                                        vgrow="NEVER"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                                                        vgrow="NEVER"/>
                                                    </rowConstraints>
                                                    <children>
                                                        <Label text="Naziv Firme:"/>
                                                        <Label text="Kontak osoba:" GridPane.rowIndex="1"/>
                                                        <Label text="Kod banke:" GridPane.rowIndex="2"/>
                                                        <Label text="PIB:" GridPane.rowIndex="3"/>
                                                        <Label text="Matični Broj:" GridPane.rowIndex="4"/>
                                                        <Label text="Tekuci Racun:" GridPane.rowIndex="5"/>
                                                        <TextField fx:id="tNazivFime" GridPane.columnIndex="1"/>
                                                        <TextField fx:id="tKontaktOsoba" GridPane.columnIndex="1"
                                                                   GridPane.rowIndex="1"/>
                                                        <TextField fx:id="tKodBanke" GridPane.columnIndex="1"
                                                                   GridPane.rowIndex="2"/>
                                                        <TextField fx:id="tPIB" GridPane.columnIndex="1"
                                                                   GridPane.rowIndex="3"/>
                                                        <TextField fx:id="tMaticniBroj" GridPane.columnIndex="1"
                                                                   GridPane.rowIndex="4"/>
                                                        <TextField fx:id="tTekuciRacun" GridPane.columnIndex="1"
                                                                   GridPane.rowIndex="5"/>
                                                        <Label text="Broj fakture:" GridPane.rowIndex="6"/>
                                                        <TextField fx:id="tBrojFakture" GridPane.columnIndex="1"
                                                                   GridPane.rowIndex="6"/>
                                                        <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1"
                                                              GridPane.rowIndex="7">
                                                            <children>
                                                                <Button fx:id="bSnimiFirma" mnemonicParsing="false"
                                                                        text="Snimi"/>
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </GridPane>
                                            </content>
                                        </TitledPane>
                                    </children>
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </padding>
                                </GridPane>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
