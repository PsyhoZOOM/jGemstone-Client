   <children>
      <JFXToolbar fx:id="jfxToolBar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
               <menus>
                  <Menu mnemonicParsing="false">
                     <graphic>
                        <JFXHamburger fx:id="hambMenuleft" />
                     </graphic>
                  </Menu>
                  <Menu mnemonicParsing="false" text="%FILE">
                     <items>
                        <MenuItem fx:id="mExit" mnemonicParsing="false" text="Izlaz" />
                     </items>
                  </Menu>
                  <Menu fx:id="testutf" mnemonicParsing="false" text="%EDIT">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Opcije">
                     <items>
                        <MenuItem fx:id="mSetup" mnemonicParsing="false" onAction="#mOpenSetup" text="PodeÅ¡avanja" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Help">
                     <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
         </top>
         <left>
            <JFXDrawer fx:id="drawerLeft" alignment="TOP_LEFT" overLayVisible="false" BorderPane.alignment="CENTER">
               <children>
                  <VBox fx:id="vbMenuLeft" spacing="5.0">
                     <children>
                        <JFXButton fx:id="bKorisnici" buttonType="RAISED" maxWidth="1.7976931348623157E308" onAction="#showKorisnici" text="Korisnici" VBox.vgrow="ALWAYS" />
                        <JFXButton fx:id="bGrupe" buttonType="RAISED" maxWidth="1.7976931348623157E308" onAction="#showGrupe" text="Grupe" />
                        <JFXButton fx:id="bServisi" buttonType="RAISED" maxWidth="1.7976931348623157E308" onAction="#showServisi" text="Servisi" />
                        <JFXButton fx:id="bUgovori" buttonType="RAISED" maxWidth="1.7976931348623157E308" onAction="#showUgovori" text="Ugovori" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </children>
            </JFXDrawer>
         </left>
         <bottom>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" HBox.hgrow="NEVER">
                     <children>
                        <Label text="Selected Action:" />
                        <Label fx:id="lAction" text="Label" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" fillHeight="true" spacing="10.0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="%STATUS" />
                        <JFXSnackbar fx:id="snackBar" />
                        <ImageView fx:id="iStatusServer" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
                        <Label fx:id="lStatusConnection" text="%NOT_CONNECTED" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </bottom>
         <center>
            <AnchorPane fx:id="anchorCenter" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
