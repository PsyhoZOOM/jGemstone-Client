                <TextField fx:id="tBrzina" maxWidth="200.0"/>
                <Label text="Cena:"/>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Spinner fx:id="spnCena"/>
                        <Label text="din."/>
                    </children>
                </HBox>
                <Label text="PDV:"/>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Spinner fx:id="spnPDV"/>
                        <Label text="\%"/>
                    </children>
                </HBox>
                <Label text="Idle-Timeout"/>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Spinner fx:id="spnIdleTimeout"/>
                        <Label text="msec."/>
                    </children>
                </HBox>
                <Label text="Opis:"/>
                <TextArea fx:id="tOpis"/>
                <Button fx:id="bSnimi" mnemonicParsing="false" onAction="#savePaket" text="Snimi"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
