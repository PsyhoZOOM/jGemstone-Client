<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXDatePicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<?import com.jfoenix.controls.JFXTreeTableView?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="800.0" prefWidth="1280.0"
  stylesheets="@../css/Main.css" xmlns="http://javafx.com/javafx/8.0.172"
  fx:controller="net.yuvideo.jgemstone.client.Controllers.KorisnikUplateController">
  <children>
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
        <HBox VBox.vgrow="NEVER"/>
        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
          <children>
            <TitledPane alignment="CENTER" contentDisplay="CENTER" text="UPLATE - STATUS" textAlignment="CENTER" VBox.vgrow="NEVER">
              <content>
                <HBox spacing="5.0">
                  <children>
                    <VBox minWidth="250.0" prefHeight="200.0" spacing="5.0" HBox.hgrow="NEVER">
                      <children>
                        <Label text="ZADUZIVANJE OSTALIH USLUGA" underline="true">
                          <font>
                            <Font name="System Bold" size="13.0" />
                          </font>
                        </Label>
                        <Label text="Naziv usluge:" />
                        <TextField fx:id="tNazivUslugeCustom" />
                        <Label text="Za mesec" />
                        <DatePicker fx:id="dtpDatumZaNaplatuCustom" editable="false" />
                                    <HBox alignment="CENTER" spacing="5.0">
                                       <children>
                                          <Label text="Kolicina" HBox.hgrow="ALWAYS" />
                                          <Label text="J.Mere" HBox.hgrow="ALWAYS" />
                                       </children>
                                       <padding>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </padding>
                                    </HBox>
                                    <HBox spacing="5.0">
                                       <children>
                                          <TextField fx:id="tKolicina" />
                                          <ComboBox fx:id="cmbJMere" />
                                       </children>
                                       <VBox.margin>
                                          <Insets />
                                       </VBox.margin>
                                    </HBox>
                        <Label text="Cena: (jedinična)" />
                        <TextField fx:id="tCenaCustom" text="0.00" />
                        <Label text="PDV:" />
                        <TextField fx:id="tPDVCustom" text="20" />
                        <Label text="Rate" />
                        <TextField fx:id="tRate" text="1" />
                        <Label text="Cena sa PDV:"/>
                        <Label fx:id="lCustomCena" text="0.00" />
                        <Button fx:id="bZaduziCustomService" alignment="CENTER" mnemonicParsing="false" onAction="#zaduziCustomService" text="Zaduži novu uslugu">
                          <graphic>
                            <FontIcon fill="white" iconLiteral="mdi-cash" />
                          </graphic>
                        </Button>
                      </children>
                      <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                      </padding>
                    </VBox>
                    <Separator orientation="VERTICAL" />
                    <VBox minWidth="250.0" spacing="5.0" HBox.hgrow="SOMETIMES">
                      <children>
                        <Label text="UPLATE UNAPRED" underline="true">
                          <font>
                            <Font name="System Bold" size="13.0" />
                          </font>
                        </Label>
                        <Label text="Za mesec" />
                        <DatePicker fx:id="dtpDatumZaNaplatu" editable="false" />
                        <Label text="Naziv usluge:" />
                        <ComboBox fx:id="cmbUserServices" />
                        <Button fx:id="bZaduzi" alignment="CENTER" mnemonicParsing="false" onAction="#zaduziUsluguUnapred" text="Uplati">
                          <graphic>
                            <FontIcon fill="white" iconLiteral="eli-plus-sign" />
                          </graphic>
                        </Button>
                      </children>
                      <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                      </padding>
                    </VBox>
                    <Separator orientation="VERTICAL" />
                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                      <children>
                        <Label text="STATUS" underline="true">
                          <font>
                            <Font name="System Bold" size="13.0" />
                          </font>
                        </Label>
                        <Label text="Datum isteka:" />
                        <Label fx:id="lStatusDatumIsteka" text="--" />
                        <Label text="Zaduzen od:" />
                        <Label fx:id="lStatusZaduzenOd" text="--" />
                        <Label text="Datum uplate:" />
                        <Label fx:id="lStatusDatumUplate" text="--" />
                        <Label text="Uplatio:" />
                        <Label fx:id="lStatusUplatioOper" text="--" />
                        <Label text="Identifikacija:" />
                        <Label fx:id="lIdentifikacija" text="--" />
                      </children>
                      <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                      </padding>
                    </VBox>
                    <Separator orientation="VERTICAL" prefHeight="200.0" />
                    <VBox HBox.hgrow="NEVER" spacing="5.0">
                      <children>
                        <ImageView fx:id="imgQR" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                        <Label fx:id="lUserJBroj" text="UserID" />
                        <Label fx:id="lImePrezime" text="IME PREZIME" />
                        <Separator prefWidth="200.0" />
                        <Button fx:id="bPrikaziUplate" mnemonicParsing="false" onAction="#showAllUplate" text="Prikaži uplate">
                          <graphic>
                            <FontIcon fill="white" iconLiteral="mdi-cash" />
                          </graphic>
                        </Button>
                        <Button fx:id="bPrikaziRacun" mnemonicParsing="false" onAction="#prikaziRacun" text="Prikaži racun">
                          <graphic>
                            <FontIcon fill="white" iconLiteral="eli-list-alt" />
                          </graphic>
                        </Button>
                      </children>
                      <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                      </padding>
                    </VBox>
                  </children>
                  <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
                </HBox>
              </content>
            </TitledPane>
            <Separator prefWidth="200.0" VBox.vgrow="NEVER" />
            <HBox alignment="TOP_CENTER" VBox.vgrow="NEVER">
              <children>
                <Label text="ZADUŽENJA KORISNIKA" underline="true" HBox.hgrow="ALWAYS">
                  <font>
                    <Font name="System Bold" size="13.0" />
                  </font>
                </Label>
              </children>
            </HBox>
            <JFXTreeTableView VBox.vgrow="ALWAYS" tableMenuButtonVisible="true"
              fx:id="tblZaduzenja">
              <columns>
                <TreeTableColumn fx:id="cNazivServisa" prefWidth="75.0" text="Naziv Usluge" />
                <TreeTableColumn fx:id="cDatumZaduzenja" prefWidth="75.0" text="Datum zaduženja" />
                <TreeTableColumn fx:id="cZaMesec" prefWidth="75.0" text="Za Mesec" />
                <TreeTableColumn fx:id="cCena" prefWidth="75.0" text="Cena" />
                        <TreeTableColumn fx:id="cKolicina" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" text="Količina" />
                <TreeTableColumn fx:id="cPopust" prefWidth="75.0" text="Popust" />
                <TreeTableColumn prefWidth="75.0" text="Osnovica" fx:id="cOsnovica"/>
                <TreeTableColumn fx:id="cPDV" prefWidth="75.0" text="PDV" />
                <TreeTableColumn fx:id="cZaUplatu" prefWidth="75.0" text="Za Uplatu" />
                <TreeTableColumn fx:id="cUplaceno" prefWidth="75.0" text="Uplaceno" />
                <TreeTableColumn fx:id="cZaduzio" prefWidth="75.0" text="Zadužio" visible="false" />
                <TreeTableColumn fx:id="cRazduzio" prefWidth="75.0" text="Razdužio" visible="false" />
              </columns>
              <columnResizePolicy>
                <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
              </columnResizePolicy>
              <contextMenu>
                <ContextMenu>
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#showAllUplate"
                      text="Prikaži uplate"/>
                    <MenuItem mnemonicParsing="false" onAction="#prikaziRacun"
                      text="Prikaži račun"/>
                    <MenuItem mnemonicParsing="false" onAction="#deleteZaduzenje" text="Izbriši"/>
                  </items>
                </ContextMenu>
              </contextMenu>
            </JFXTreeTableView>
            <HBox spacing="5.0">
              <children>
                <CheckBox contentDisplay="TOP" mnemonicParsing="false" text="Prikaži sve uplate"
                  underline="true" fx:id="chkSveUplate"/>
                <Separator orientation="VERTICAL" prefHeight="200.0"/>
                <JFXDatePicker editable="true" promptText="dugovanja za mesec" fx:id="dtpZaMesec"/>
              </children>
              <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
              </padding>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="5.0" VBox.vgrow="NEVER">
              <children>
                <Label text="Dug:" />
                <Label fx:id="lDugZaduzenja" text="0,00" />
              </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT">
              <children>
                <Label text="Mesto uplate:" />
                <ComboBox fx:id="cmbTypeUplate" prefWidth="150.0" />
              </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="5.0" VBox.vgrow="NEVER">
              <children>
                <Label text="Za uplatu:" />
                <Spinner fx:id="cmbZaUplatu" />
                <Button fx:id="bUplatiServis" mnemonicParsing="false" onAction="#uplatiServis" text="Uplati">
                  <graphic>
                    <FontIcon fill="white" iconLiteral="eli-plus-sign" />
                  </graphic>
                </Button>
              </children>
              <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
              </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
              <children>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="RED" height="20.0" stroke="BLACK" strokeType="INSIDE" width="20.0" />
                <Label text="Nema uplate" />
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DARKORANGE" height="20.0" stroke="BLACK" strokeType="INSIDE" width="20.0" />
                <Label text="Delimična uplata" />
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="GREEN" height="20.0" stroke="BLACK" strokeType="INSIDE" width="20.0" />
                <Label text="Uplaćeno" />
              </children>
              <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
              </padding>
            </HBox>
          </children>
          <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
          </padding>
        </VBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
