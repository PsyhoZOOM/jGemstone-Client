<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
  minWidth="-Infinity" prefHeight="800.0" prefWidth="1280.0"
  stylesheets="@../css/Main.css" xmlns="http://javafx.com/javafx/8.0.162"
  fx:controller="net.yuvideo.jgemstone.client.Controllers.KorisnikUplateController">
  <children>
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
      AnchorPane.topAnchor="0.0">
      <children>
        <HBox VBox.vgrow="NEVER">
          <children>
            <ToolBar HBox.hgrow="ALWAYS" maxHeight="1.7976931348623157E308"
              maxWidth="1.7976931348623157E308">
              <items>
                <Button mnemonicParsing="false" onAction="#close" text="Zatvori" fx:id="bClose">
                  <graphic>
                    <FontAwesomeIconView fill="WHITE" glyphName="CLOSE"/>
                  </graphic>
                </Button>
                <Pane HBox.hgrow="ALWAYS">
                </Pane>
              </items>
            </ToolBar>
          </children>
        </HBox>
        <VBox VBox.vgrow="ALWAYS" spacing="5.0">
          <children>
            <TitledPane VBox.vgrow="NEVER" alignment="CENTER" contentDisplay="CENTER"
              text="UPLATE - STATUS" textAlignment="CENTER">
              <content>
                <HBox spacing="5.0">
                  <children>
                    <VBox HBox.hgrow="NEVER" fillWidth="false" minWidth="250.0" prefHeight="200.0"
                      spacing="5.0">
                      <children>
                        <Label text="ZADUZIVANJE OSTALIH USLUGA" underline="true">
                          <font>
                            <Font name="System Bold" size="13.0"/>
                          </font>
                        </Label>
                        <Label text="Naziv usluge:"/>
                        <TextField fx:id="tNazivUslugeCustom"/>
                        <Label text="Za mesec"/>
                        <DatePicker editable="false" fx:id="dtpDatumZaNaplatuCustom"/>
                        <Label text="Cena:"/>
                        <TextField text="0.00" fx:id="tCenaCustom"/>
                        <Label text="PDV:"/>
                        <TextField text="20" fx:id="tPDVCustom"/>
                        <Label text="Rate"/>
                        <TextField text="1" fx:id="tRate"/>
                        <Label text="Ukupno:"/>
                        <Label text="0.00" fx:id="lCustomCena"/>
                        <Button alignment="CENTER" mnemonicParsing="false"
                          onAction="#zaduziCustomService" text="Zaduži novu uslugu"
                          fx:id="bZaduziCustomService">
                          <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="EXCHANGE"/>
                          </graphic>
                        </Button>
                      </children>
                      <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                      </padding>
                    </VBox>
                    <Separator orientation="VERTICAL"/>
                    <VBox HBox.hgrow="SOMETIMES" minWidth="250.0" spacing="5.0">
                      <children>
                        <Label text="UPLATE UNAPRED" underline="true">
                          <font>
                            <Font name="System Bold" size="13.0"/>
                          </font>
                        </Label>
                        <Label text="Za mesec"/>
                        <DatePicker editable="false" fx:id="dtpDatumZaNaplatu"/>
                        <Label text="Naziv usluge:"/>
                        <ComboBox fx:id="cmbUserServices"/>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#zaduziUsluguUnapred"
                          text="Uplati" fx:id="bZaduzi">
                          <graphic>
                            <FontAwesomeIconView fill="WHITE"
                              glyphName="PLUS_CIRCLE"/>
                          </graphic>
                        </Button>
                      </children>
                      <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                      </padding>
                    </VBox>
                    <Separator orientation="VERTICAL"/>
                    <VBox HBox.hgrow="ALWAYS" spacing="5.0">
                      <children>
                        <Label text="STATUS" underline="true">
                          <font>
                            <Font name="System Bold" size="13.0"/>
                          </font>
                        </Label>
                        <Label text="Datum isteka:"/>
                        <Label text="--" fx:id="lStatusDatumIsteka"/>
                        <Label text="Zaduzen od:"/>
                        <Label text="--" fx:id="lStatusZaduzenOd"/>
                        <Label text="Datum uplate:"/>
                        <Label text="--" fx:id="lStatusDatumUplate"/>
                        <Label text="Uplatio:"/>
                        <Label text="--" fx:id="lStatusUplatioOper"/>
                        <Label text="Identifikacija:"/>
                        <Label text="--" fx:id="lIdentifikacija"/>
                      </children>
                      <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                      </padding>
                    </VBox>
                    <Separator orientation="VERTICAL" prefHeight="200.0"/>
                    <VBox HBox.hgrow="ALWAYS" spacing="5.0">
                      <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                          preserveRatio="true" fx:id="imgQR"/>
                        <Label text="UserID" fx:id="lUserJBroj"/>
                        <Label text="IME PREZIME" fx:id="lImePrezime"/>
                        <Separator prefWidth="200.0"/>
                        <Button mnemonicParsing="false" onAction="#showAllUplate"
                          text="Prikaži uplate" fx:id="bPrikaziUplate">
                          <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="MONEY"/>
                          </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#prikaziRacun"
                          text="Prikaži racun" fx:id="bPrikaziRacun">
                          <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="TH_LIST"/>
                          </graphic>
                        </Button>
                      </children>
                      <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                      </padding>
                    </VBox>
                  </children>
                  <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                  </padding>
                </HBox>
              </content>
            </TitledPane>
            <Separator VBox.vgrow="NEVER" prefWidth="200.0"/>
            <HBox VBox.vgrow="NEVER" alignment="TOP_CENTER">
              <children>
                <Label HBox.hgrow="ALWAYS" text="ZADUŽENJA KORISNIKA" underline="true">
                  <font>
                    <Font name="System Bold" size="13.0"/>
                  </font>
                </Label>
              </children>
            </HBox>
            <TreeTableView VBox.vgrow="ALWAYS" tableMenuButtonVisible="true" fx:id="tblZaduzenja">
              <columns>
                <TreeTableColumn prefWidth="75.0" text="Naziv Usluge" fx:id="cNazivServisa"/>
                <TreeTableColumn prefWidth="75.0" text="Datum zaduženja" fx:id="cDatumZaduzenja"/>
                <TreeTableColumn prefWidth="75.0" text="Za Mesec" fx:id="cZaMesec"/>
                <TreeTableColumn prefWidth="75.0" text="Cena" fx:id="cCena"/>
                <TreeTableColumn prefWidth="75.0" text="Popust" fx:id="cPopust"/>
                <TreeTableColumn prefWidth="75.0" text="PDV" fx:id="cPDV"/>
                <TreeTableColumn prefWidth="75.0" text="Za Uplatu" fx:id="cZaUplatu"/>
                <TreeTableColumn prefWidth="75.0" text="Uplaceno" fx:id="cUplaceno"/>
                <TreeTableColumn prefWidth="75.0" text="Zadužio" visible="false" fx:id="cZaduzio"/>
                <TreeTableColumn prefWidth="75.0" text="Razdužio" visible="false"
                  fx:id="cRazduzio"/>
              </columns>
              <columnResizePolicy>
                <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
              </columnResizePolicy>
            </TreeTableView>
            <CheckBox contentDisplay="TOP" mnemonicParsing="false" text="Prikaži sve uplate"
              underline="true" fx:id="chkSveUplate"/>
            <HBox VBox.vgrow="NEVER" alignment="CENTER_RIGHT" spacing="5.0">
              <children>
                <Label text="Dug:"/>
                <Label text="0,00" fx:id="lDugZaduzenja"/>
              </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT">
              <children>
                <Label text="Mesto uplate:"/>
                <ComboBox prefWidth="150.0" fx:id="cmbTypeUplate"/>
              </children>
            </HBox>
            <HBox VBox.vgrow="NEVER" alignment="CENTER_RIGHT" spacing="5.0">
              <children>
                <Label text="Za uplatu:"/>
                <Spinner fx:id="cmbZaUplatu"/>
                <Button mnemonicParsing="false" onAction="#uplatiServis" text="Uplati"
                  fx:id="bUplatiServis">
                  <graphic>
                    <FontAwesomeIconView fill="WHITE" glyphName="PLUS_CIRCLE"/>
                  </graphic>
                </Button>
              </children>
              <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
              </padding>
            </HBox>
            <HBox VBox.vgrow="NEVER" alignment="CENTER_LEFT" spacing="5.0">
              <children>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="RED" height="20.0" stroke="BLACK"
                  strokeType="INSIDE" width="20.0"/>
                <Label text="Nema uplate"/>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DARKORANGE" height="20.0"
                  stroke="BLACK" strokeType="INSIDE" width="20.0"/>
                <Label text="Delimična uplata"/>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="GREEN" height="20.0" stroke="BLACK"
                  strokeType="INSIDE" width="20.0"/>
                <Label text="Uplaćeno"/>
              </children>
              <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
              </padding>
            </HBox>
          </children>
          <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
          </padding>
        </VBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
