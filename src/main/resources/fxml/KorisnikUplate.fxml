<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172"
  fx:controller="net.yuvideo.jgemstone.client.Controllers.KorisnikUplateController"
  fx:id="mainPane">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
        AnchorPane.topAnchor="0.0" spacing="5.0">
         <children>
            <Separator prefWidth="200.0"/>
            <HBox VBox.vgrow="NEVER" alignment="CENTER_RIGHT" spacing="20.0">
               <children>
                  <JFXDatePicker editable="false" promptText="Datum uplate" fx:id="dtpDatum"/>
                  <JFXTextField labelFloat="true" promptText="Uplaćeno" text="0.00" fx:id="tCena"/>
                  <JFXTextField labelFloat="true" minWidth="300.0" promptText="Opis" fx:id="tOpis"/>
                  <JFXButton buttonType="RAISED" onAction="#uplati" text="Uplati" fx:id="bUplati"/>
                  <Pane HBox.hgrow="ALWAYS"/>
                  <JFXTextField labelFloat="true" promptText="Pretraga" fx:id="tPretraga"/>
               </children>
               <VBox.margin>
                  <Insets/>
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="20.0"/>
               </padding>
            </HBox>
            <Separator prefWidth="200.0"/>
            <JFXTreeTableView VBox.vgrow="ALWAYS" fx:id="tUplate">
               <columns>
                  <TreeTableColumn prefWidth="75.0" text="OPERATER" fx:id="cOper"/>
                  <TreeTableColumn prefWidth="75.0" text="DATUM" fx:id="cDatum"/>
                  <TreeTableColumn prefWidth="75.0" text="DUGUJE" fx:id="cDuguje"/>
                  <TreeTableColumn prefWidth="75.0" text="POTRAŽUJE" fx:id="cPotrazuje"/>
                  <TreeTableColumn prefWidth="75.0" text="OPIS" fx:id="cOpis"/>
               </columns>
               <columnResizePolicy>
                  <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
               </columnResizePolicy>
            </JFXTreeTableView>
            <HBox VBox.vgrow="NEVER" alignment="CENTER_RIGHT" spacing="5.0">
               <children>
                  <Label text="Duguje:"/>
                  <Label text="0.00" fx:id="lDuguje"/>
                  <Label text="Potražuje:">
                     <padding>
                        <Insets left="20.0"/>
                     </padding>
                  </Label>
                  <Label text="0.00" fx:id="lPotrazuje"/>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </padding>
            </HBox>
            <HBox VBox.vgrow="NEVER" alignment="CENTER_RIGHT" spacing="5.0">
               <children>
                  <Label text="Ukupan dug:"/>
                  <Label text="0.00" fx:id="lUkupno"/>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </padding>
            </HBox>
            <HBox VBox.vgrow="NEVER" alignment="CENTER_RIGHT" spacing="5.0">
               <children>
                  <JFXButton buttonType="RAISED" disable="true" onAction="#izbrisiUplatu"
                    text="Obriši uplatu" fx:id="bIzbrisiUplatu"/>
                  <Pane HBox.hgrow="ALWAYS"/>
                  <JFXButton mnemonicParsing="false" onAction="#testProduzenje"
                    text="Test eproduzenje" fx:id="bTest"/>
                  <JFXButton buttonType="RAISED" disable="true" onAction="#showZaduzenja"
                    text="Prikaži zaduženja" fx:id="bShowZaduzenja"/>
                  <JFXButton disable="true" onAction="#stampajUplate" text="Štampa"
                    fx:id="bStampa"/>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
         </padding>
      </VBox>
   </children>
</AnchorPane>
