                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="5.0" VBox.vgrow="NEVER">
                    <children>
                        <Label text="Identifikacija:"/>
                        <TextField fx:id="tIdentification"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="5.0" VBox.vgrow="NEVER">
                    <children>
                        <Label text="Ističe:"/>
                        <DatePicker fx:id="dtpDatumIsteka" minWidth="164.0" prefWidth="164.0"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT" prefHeight="100.0">
                    <children>
                        <Label text="Popust:"/>
                        <TextField fx:id="tPopust" minWidth="50.0" prefWidth="50.0"/>
