<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/Main.css"
            xmlns="http://javafx.com/javafx/8.0.65" fx:controller="net.yuvideo.jgemstone.client.Controllers.FiksnaTelefonijaZone">
    <children>
        <VBox layoutX="216.0" layoutY="75.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="NEVER">
                    <children>
                        <TextField fx:id="tNazivZone"/>
                        <TextField fx:id="tOpisZOne"/>
                        <ComboBox fx:id="cmbUsluga" prefWidth="150.0"/>
                        <Pane prefWidth="100.0"/>
                        <Button fx:id="bDodajZonu" mnemonicParsing="false" text="Dodaj" onAction="#dodajZonu"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <TableView fx:id="tblZone">
                    <columns>
                        <TableColumn fx:id="cNaziv" prefWidth="75.0" text="Naziv"/>
                        <TableColumn fx:id="cOpis" prefWidth="75.0" text="Opis"/>
                        <TableColumn fx:id="cUsluga" prefWidth="75.0" text="Usluga"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER_RIGHT" spacing="5.0" VBox.vgrow="NEVER">
                    <children>
                        <Button fx:id="bImportCSV" mnemonicParsing="false" onAction="#importCSV" text="Import CSV"/>
                        <Button fx:id="bObrisi" mnemonicParsing="false" onAction="#obrisiZonu" text="Obriši"/>
                        <Button fx:id="bOsvezi" mnemonicParsing="false" onAction="#osveziZone" text="Osveži"/>
                        <Button fx:id="bIzmeni" mnemonicParsing="false" onAction="#izmeniZonu" text="Izmeni"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
