<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<JFXDialogLayout xmlns:fx="http://javafx.com/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                 minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.65"
                 fx:controller="net.yuvideo.jgemstone.client.Controllers.LoginWinController">
    <children>
        <VBox alignment="CENTER" fillWidth="false" spacing="20.0">
            <children>
                <ImageView fx:id="imgLogo" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"/>
                <JFXTextField fx:id="tUserName" labelFloat="true" maxHeight="1.7976931348623157E308"
                              maxWidth="1.7976931348623157E308" prefWidth="250.0" promptText="UserName"/>
                <JFXPasswordField fx:id="tPass" maxWidth="1.7976931348623157E308" prefWidth="250.0"
                                  promptText="Lozinka"/>
                <JFXButton fx:id="bLogin" onAction="#clientLogin" text="Login">
                    <VBox.margin>
                        <Insets bottom="30.0"/>
                    </VBox.margin>
                </JFXButton>
                <Label fx:id="lMessage" text="Upišite korisničko ime i lozinku"/>
                <JFXButton fx:id="bOpcije" onAction="#openOptions" text="Opcije"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </VBox>
    </children>
</JFXDialogLayout>
