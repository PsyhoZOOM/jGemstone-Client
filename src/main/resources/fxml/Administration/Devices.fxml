            <TableColumn prefWidth="75.0" text="UserName" fx:id="cUserName"/>
            <TableColumn prefWidth="75.0" text="URL" fx:id="cURL"/>
            <TableColumn prefWidth="75.0" text="Opis" fx:id="cOpis"/>
