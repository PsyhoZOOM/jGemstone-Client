<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" alignment="CENTER_LEFT"
  maxHeight="1.7976931348623157E308"
  maxWidth="1.7976931348623157E308"
  minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
  prefWidth="900.0"
  spacing="5.0" stylesheets="@../css/Main.css" xmlns="http://javafx.com/javafx/8.0.162"
  fx:controller="net.yuvideo.jgemstone.client.Controllers.KorisnikUgovoriController">
  <children>
    <VBox VBox.vgrow="NEVER">
      <children>
        <Label text="NOV UGOVOR" underline="true">
          <font>
            <Font name="System Bold" size="13.0"/>
          </font>
        </Label>
        <Label text="Broj ugovora:"/>
        <TextField maxWidth="-Infinity" minWidth="200.0" prefWidth="200.0" fx:id="tBrUgovora"/>
        <Label text="Template:"/>
        <ComboBox fx:id="cmbTamplate"/>
        <Label text="Trajanje:"/>
        <Label text="Od:"/>
        <DatePicker editable="false" fx:id="dtpTrajanjeOd"/>
        <Label text="Do:"/>
        <DatePicker editable="false" fx:id="dtpTrajanjeDo"/>
        <Label text="Opis:"/>
        <TextArea fx:id="tOPis"/>
        <ButtonBar prefWidth="200.0">
          <buttons>
            <Button mnemonicParsing="false" onAction="#addNewUgovorShow" text="Dodaj"
              fx:id="bDodaj">
              <graphic>
                <FontAwesomeIconView fill="WHITE" glyphName="PLUS_CIRCLE"/>
              </graphic>
            </Button>
          </buttons>
        </ButtonBar>
        <Label text="UGOVORI" underline="true">
          <font>
            <Font name="System Bold" size="13.0"/>
          </font>
        </Label>
      </children>
    </VBox>
    <VBox VBox.vgrow="ALWAYS">
      <children>
        <TableView VBox.vgrow="ALWAYS" maxHeight="1.7976931348623157E308"
          maxWidth="1.7976931348623157E308"
          fx:id="tblUgovori">
          <columns>
            <TableColumn text="BR" fx:id="cBr"/>
            <TableColumn minWidth="100.0" prefWidth="100.0" text="NAZIV" fx:id="cNaziv"/>
            <TableColumn prefWidth="75.0" text="TRAJANJE" fx:id="cTrajanje">
              <columns>
                <TableColumn prefWidth="75.0" text="OD" fx:id="cOd"/>
                <TableColumn prefWidth="75.0" text="DO" fx:id="cDo"/>
              </columns>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="OPIS" fx:id="cOpis"/>
          </columns>
          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
          </columnResizePolicy>
        </TableView>
      </children>
    </VBox>
    <HBox VBox.vgrow="NEVER" alignment="CENTER_RIGHT" spacing="5.0">
      <children>
        <Button mnemonicParsing="false" onAction="#stampajUgovor" text="Štampa"
          fx:id="stampaUgovora">
          <graphic>
            <FontAwesomeIconView fill="WHITE" glyphName="PRINT"/>
          </graphic>
        </Button>
        <Pane HBox.hgrow="ALWAYS" prefWidth="200.0"/>
        <Button mnemonicParsing="false" text="Obriši" fx:id="bObrisi">
          <graphic>
            <FontAwesomeIconView fill="WHITE" glyphName="REMOVE"/>
          </graphic>
        </Button>
        <Button mnemonicParsing="false" onAction="#izmeniUgovor" text="Izmeni" fx:id="bIzmeni">
          <graphic>
            <FontAwesomeIconView fill="WHITE" glyphName="EDIT"/>
          </graphic>
        </Button>
      </children>
      <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </padding>
    </HBox>
  </children>
  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
  </padding>
</VBox>
