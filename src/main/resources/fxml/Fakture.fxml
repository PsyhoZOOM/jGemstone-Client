<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            stylesheets="@../css/Main.css" xmlns="http://javafx.com/javafx/8.0.65"
            fx:controller="net.yuvideo.jgemstone.client.Controllers.FaktureController">
    <children>
        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="FAKTURA Broj:"/>
                        <Label fx:id="lBrFakture" text="0000000-00/00/0000"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <TableView fx:id="tblFakture" blendMode="SRC_ATOP" editable="true" tableMenuButtonVisible="true"
                           VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="cId" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="ID"
                                     visible="false"/>
                        <TableColumn fx:id="colBr" style="-fx-alignment: CENTER;" text="Br."/>
                        <TableColumn fx:id="colVrstaNaziv" minWidth="300.0" prefWidth="300.0"
                                     style="-fx-alignment: CENTER;" text="VRSTA-NAZIV &#10;DOBARA-USLUGA">
                        </TableColumn>
                        <TableColumn fx:id="cJedMere" style="-fx-alignment: CENTER;" text="Jed. mere"/>
                        <TableColumn fx:id="cKolicina" style="-fx-alignment: CENTER;" text="Količina"/>
                        <TableColumn fx:id="cCenaBezPdv" style="-fx-alignment: CENTER-RIGHT;" text="Cena bez PDV"/>
                        <TableColumn fx:id="cVrednostBezPdv" style="-fx-alignment: CENTER-RIGHT;"
                                     text="Vrednost &#10;bez PDV"/>
                        <TableColumn fx:id="cOsnovicaZaPdv" style="-fx-alignment: CENTER-RIGHT;"
                                     text="Osnovica &#10;sa PDV"/>
                        <TableColumn fx:id="cStopaPDV" style="-fx-alignment: CENTER-RIGHT;" text="Stopa  &#10;PDV"/>
                        <TableColumn fx:id="cIznosPDV" style="-fx-alignment: CENTER-RIGHT;" text="Iznos &#10;PDV"/>
                        <TableColumn fx:id="cVrednostSaPDV" style="-fx-alignment: CENTER-RIGHT;;"
                                     text="Vrednost &#10;sa PDV"/>
                    </columns>
                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem fx:id="miDeleteFakture" mnemonicParsing="false" onAction="#deleteFakturu"
                                          text="Izbriši Fakturu"/>
                            </items>
                        </ContextMenu>
                    </contextMenu>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <GridPane vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints halignment="LEFT" maxWidth="1.7976931348623157E308"/>
                        <ColumnConstraints halignment="CENTER" prefWidth="50.0"/>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints halignment="RIGHT" maxWidth="1.7976931348623157E308"/>
                        <ColumnConstraints halignment="LEFT"/>
                        <ColumnConstraints halignment="LEFT" maxWidth="1.7976931348623157E308"/>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints halignment="LEFT" maxWidth="1.7976931348623157E308"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Osnovica za pdv: " GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                        <Label fx:id="lOsnovicaZaPDV" text="0.00" GridPane.columnIndex="2">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                        <Label text="+" GridPane.columnIndex="3">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                        <Label text="   PDV " GridPane.columnIndex="4">
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                        <Label fx:id="lPDV" text="0" GridPane.columnIndex="5">
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                        </Label>
                        <Label text="\%: " GridPane.columnIndex="6">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                        <Label fx:id="lIznosPDVZbir" text="0.00" GridPane.columnIndex="7">
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                        <Label text="vrednost sa PDV: " GridPane.columnIndex="8">
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                        <Label fx:id="lvrednostSaPDVZbir" text="0.00" GridPane.columnIndex="9">
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                        <Label text="Ukupno: " GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                        <Label fx:id="lUkupnoOsnovicaZaPDV" text="0.00" GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                        <Label text="ukupno: " GridPane.columnIndex="4" GridPane.columnSpan="3" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                        <Label text="0.00" GridPane.columnIndex="7" GridPane.rowIndex="1">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                        <Label text="ukupno: " GridPane.columnIndex="8" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                        <Label text="0.00" GridPane.columnIndex="9" GridPane.rowIndex="1">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Label>
                        <Button fx:id="bPrikaziFakture" alignment="CENTER" onAction="#prikaziFakture" text="Osveži">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </GridPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
