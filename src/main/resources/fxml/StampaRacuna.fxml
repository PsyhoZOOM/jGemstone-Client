<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../css/Main.css" xmlns="http://javafx.com/javafx/8.0.111">
    <children>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <ToolBar VBox.vgrow="NEVER">
                    <items>
                        <JFXButton text="Zatvori"/>
                    </items>
                </ToolBar>
                <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox spacing="5.0" VBox.vgrow="NEVER">
                            <children>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Period:"/>
                                        <DatePicker/>
                                        <Label text="Do:"/>
                                        <DatePicker/>
                                    </children>
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </padding>
                                </VBox>
                                <VBox spacing="20.0">
                                    <children>
                                        <JFXComboBox prefHeight="26.0" prefWidth="229.0" promptText="Mesto"/>
                                        <JFXComboBox prefHeight="26.0" prefWidth="229.0" promptText="Adresa"/>
                                        <JFXTextField labelFloat="true" maxWidth="406.0" minWidth="120.0"
                                                      prefHeight="32.0" prefWidth="234.0" promptText="Korisničko ime"/>
                                    </children>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </HBox>
                        <HBox alignment="TOP_RIGHT" spacing="5.0" styleClass="pane" VBox.vgrow="NEVER">
                            <children>
                                <JFXButton text="Prikaži"/>
                                <JFXButton ripplerFill="BLACK" text="Štampaj"/>
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </VBox.margin>
                        </HBox>
                        <VBox styleClass="pane" VBox.vgrow="ALWAYS">
                            <children>
                                <TableView>
                                    <columns>
                                        <TableColumn prefWidth="75.0" text="Korisničko ime"/>
                                        <TableColumn prefWidth="75.0" text="Ime i prezime"/>
                                        <TableColumn prefWidth="75.0" text="Iznos"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </children>
