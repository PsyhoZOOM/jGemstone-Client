<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/Main.css"
            xmlns="http://javafx.com/javafx/8.0.65" fx:controller="net.yuvideo.jgemstone.client.Controllers.IPTVPaketiController">
    <children>
        <VBox layoutX="140.0" layoutY="100.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_RIGHT" spacing="5.0" VBox.vgrow="NEVER">
                    <children>
                        <Button fx:id="bIzbrisi" disable="true" mnemonicParsing="false" text="Izbrisi"/>
                        <Button fx:id="bIzmeni" mnemonicParsing="false" onAction="#izmeniIPTVPaket" text="Izmeni"/>
                        <Button fx:id="bNov" mnemonicParsing="false" onAction="#novIPTVPaket" text="Nov"/>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <TableView fx:id="tblPaketiIPTV">
                    <columns>
                        <TableColumn fx:id="cNaziv" prefWidth="75.0" text="Naziv"/>
                        <TableColumn fx:id="cOpis" prefWidth="75.0" text="Opis"/>
                        <TableColumn fx:id="cID" prefWidth="75.0" text="ID"/>
                        <TableColumn fx:id="cIPTVID" prefWidth="75.0" text="IPTV_ID"/>
                        <TableColumn fx:id="cExternalID" prefWidth="75.0" text="External_ID"/>
                        <TableColumn fx:id="cCena" prefWidth="75.0" text="Cena"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
