<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            minHeight="480.0" minWidth="640.0" stylesheets="@../css/Main.css" xmlns="http://javafx.com/javafx/8.0.65"
            fx:controller="net.yuvideo.jgemstone.client.Controllers.MestaController">
    <children>
        <HBox layoutX="5.0" layoutY="4.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                      spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="20.0" VBox.vgrow="NEVER">
                            <children>
                                <VBox spacing="5.0">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                    <children>
                                        <Label text="Mesto:"/>
                                        <TextField fx:id="tMestoNaziv" promptText="Mesto"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </padding>
                                </VBox>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Broj:"/>
                                        <TextField fx:id="tMestoBroj" promptText="Broj"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </padding>
                                </VBox>
                                <Button fx:id="bAddMesto" onAction="#dodajMesto" text="Dodaj mesto"/>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </HBox>
                        <TableView fx:id="tblMesto" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                   VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colMesto" minWidth="200.0" prefWidth="300.0" text="Mesto"/>
                                <TableColumn fx:id="colMestoBroj" maxWidth="200.0" minWidth="200.0" prefWidth="200.0"
                                             text="Broj"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" spacing="20.0">
                            <children>
                                <Button fx:id="bMestoDelete" onAction="#izbrisiMesto" text="Izbriši mesto"/>
                                <Button fx:id="bMestoRefresh" onAction="#osveziMesto" text="Osveži"/>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="200.0"/>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0"
                      HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308"
                              maxWidth="1.7976931348623157E308" spacing="20.0" VBox.vgrow="NEVER">
                            <children>
                                <VBox spacing="5.0">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                    <children>
                                        <Label text="Adresa:"/>
                                        <TextField fx:id="tAdresaNaziv" promptText="Adresa"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </padding>
                                </VBox>
                                <VBox spacing="5.0">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                    <children>
                                        <Label text="Broj:"/>
                                        <TextField fx:id="tAdresaBroj" promptText="Broj"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </padding>
                                </VBox>
                                <Button fx:id="bAddAdress" onAction="#dodajAdresu" text="Dodaj adresu"/>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </HBox>
                        <TableView fx:id="tblAdrese" maxHeight="1.7976931348623157E308"
                                   maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colAdresa" prefWidth="75.0" text="Adresa"/>
                                <TableColumn fx:id="colAdresaBroj" maxWidth="200.0" minWidth="200.0" prefWidth="200.0"
                                             text="Broj"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" spacing="20.0">
                            <children>
                                <Button fx:id="bAdresaDelete" onAction="#izbrisiAdresu" text="Izbriši adresu"/>
                                <Button fx:id="bAdresaRefresh" onAction="#osveziAdresu" text="Osveži"/>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</AnchorPane>
