<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.HTMLEditor?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="5.0" stylesheets="@../css/Main.css"
  xmlns="http://javafx.com/javafx/8.0.162"
  fx:controller="net.yuvideo.jgemstone.client.Controllers.UgovoriEditController">
  <children>
    <ToolBar VBox.vgrow="NEVER">
      <items>
        <Button mnemonicParsing="false" text="Zatvori" fx:id="bClose">
          <graphic>
            <FontAwesomeIconView fill="WHITE" glyphName="CLOSE"/>
          </graphic>
        </Button>
      </items>
    </ToolBar>
    <TextField fx:id="tNazivUgovora"/>
    <HBox VBox.vgrow="NEVER" alignment="CENTER_LEFT" spacing="5.0">
      <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </padding>
      <children>
        <VBox prefHeight="85.0" prefWidth="1268.0">
          <children>
            <TitledPane VBox.vgrow="ALWAYS" text="CODES">
              <content>
                <GridPane hgap="5.0" vgap="5.0">
                  <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
                    <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES"/>
                    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES"/>
                    <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES"/>
                  </columnConstraints>
                  <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                  </rowConstraints>
                  <children>
                    <Label text="Broj ugovora:"/>
                    <TextField GridPane.columnIndex="1" editable="false" text="{%broj_ugovora}"/>
                    <Label GridPane.columnIndex="2" GridPane.rowIndex="2" text="Zaključen dana:"/>
                    <Label GridPane.columnIndex="2" text="Ime I prezime:"/>
                    <Label GridPane.rowIndex="1" text="Adresa LK"/>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" editable="false"
                      text="{%adresa_LK}"/>
                    <Label GridPane.columnIndex="2" GridPane.rowIndex="3" text="JMBG:"/>
                    <Label GridPane.columnIndex="2" GridPane.rowIndex="1" text="Broj LK"/>
                    <Label GridPane.rowIndex="2" text="Fiksni telefon:"/>
                    <Label GridPane.rowIndex="3" text="Mobilni telefon:"/>
                    <Label GridPane.rowIndex="4" text="Fax:"/>
                    <Label GridPane.rowIndex="5" text="Adresa za prijem pošte i računa:"/>
                    <Label GridPane.rowIndex="6" text="ADresa na kojoj se koristi usluga:"/>
                    <Label GridPane.rowIndex="7" text="Period zaključenja ugogovra:"/>
                    <Label GridPane.columnIndex="2" GridPane.rowIndex="4" text="Datum:"/>
                    <Label GridPane.columnIndex="2" GridPane.rowIndex="5"
                      text="Naziv-Poslovno ime:"/>
                    <Label GridPane.columnIndex="2" GridPane.rowIndex="6" text="PIB:"/>
                    <Label GridPane.columnIndex="2" GridPane.rowIndex="7" text="Matični:"/>
                    <Label GridPane.columnIndex="2" GridPane.rowIndex="8" text="Kod banke:"/>
                    <Label GridPane.columnIndex="2" GridPane.rowIndex="9" text="Mesto LK:"/>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" editable="false"
                      text="{%tel_fix}"/>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" editable="false"
                      text="{%tel_mob}"/>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" editable="false"
                      text="{%fax}"/>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="5"
                      editable="false" text="{%adresa_za_prijem_racuna}"/>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="6"
                      editable="false" text="{%adresa_koriscenja_usluge}"/>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="7" editable="false"
                      text="{%period_ugovora}"/>
                    <TextField GridPane.columnIndex="3" editable="false"
                      text="{%ime_prezime_zastupnik}"/>
                    <TextField GridPane.columnIndex="3" GridPane.rowIndex="1" editable="false"
                      text="{%broj_LK}"/>
                    <TextField GridPane.columnIndex="3" GridPane.rowIndex="2"
                      editable="false" text="{%datum_zaklj_ugovora}"/>
                    <TextField GridPane.columnIndex="3" GridPane.rowIndex="3" editable="false"
                      text="{%JMBG}"/>
                    <TextField GridPane.columnIndex="3" GridPane.rowIndex="4" editable="false"
                      text="{%datum}"/>
                    <TextField GridPane.columnIndex="3" GridPane.rowIndex="5" editable="false"
                      text="{%naziv_firme}"/>
                    <TextField GridPane.columnIndex="3" GridPane.rowIndex="6" editable="false"
                      text="{%PIB}"/>
                    <TextField GridPane.columnIndex="3" GridPane.rowIndex="7" editable="false"
                      text="{%maticni}"/>
                    <TextField GridPane.columnIndex="3" GridPane.rowIndex="8" editable="false"
                      text="{%kod_banke}"/>
                    <TextField GridPane.columnIndex="3" GridPane.rowIndex="9" editable="false"
                      text="{%mesto_LK}"/>
                    <Label GridPane.rowIndex="8" text="Kontakt osoba:"/>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="8" editable="false"
                      text="{%kontakt_osoba}"/>
                    <Label GridPane.rowIndex="9" text="Broj računa"/>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="9" editable="false"
                      text="{%broj_racuna}"/>
                  </children>
                  <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                  </padding>
                </GridPane>
              </content>
            </TitledPane>
          </children>
        </VBox>
      </children>
    </HBox>
    <HTMLEditor VBox.vgrow="ALWAYS"
      htmlText="&lt;html&gt;&lt;head&gt;&lt;/head&gt;&lt;body contenteditable=&quot;true&quot;&gt;&lt;/body&gt;&lt;/html&gt;"
      fx:id="htmlUgovor"/>
    <HBox VBox.vgrow="NEVER" alignment="CENTER_RIGHT" spacing="5.0">
      <children>
        <Button mnemonicParsing="false" onAction="#snimiUgovor" text="Snimi" fx:id="bSnimi">
          <graphic>
            <FontAwesomeIconView fill="WHITE" glyphName="SAVE"/>
          </graphic>
        </Button>
      </children>
      <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </padding>
    </HBox>
  </children>
  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
  </padding>
</VBox>
